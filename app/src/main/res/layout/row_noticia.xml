<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:elevation="8dp"
    card_view:cardCornerRadius="@dimen/card_notice_radius"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:id="@+id/contentMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/ivNoticia"
                android:layout_width="@dimen/card_size_img_notice"
                android:layout_height="@dimen/card_size_img_notice"
                android:src="@mipmap/ic_launcher"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvTitleNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/card_size_title_notice"/>

            <TextView
                android:id="@+id/tvDescripcionNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitleNotice"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/card_size_descripcion"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>